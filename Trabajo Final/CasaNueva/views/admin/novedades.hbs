<h1>NOVEDADES</h1>
<h1>Bienvenido</h1>
<span>{{usuario}}</span>
<a href="/">Ir al inicio</a>
<a href="/admin/login">volver al login</a>

<div class="container">
  <div class="row">
    <div class="col">
      <p>Hola {{usuario}}</p>
      <a href="/admin/login">volver al login</a>
    </div>
  </div>
  <div class="row">
    <div class="col">

    </div>
    <div class="col text-right">
      <a href="/admin/novedades/agregar" class="btn btn-success">
        <i class="fa fa-plus"></i>Nueva novedad</a>
        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"></i>Modificar</a>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Mueble</th>
            <th scope="col" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            <td class="text-center">
              <a href="#" class="btn btn-sm btn-secondary">
                <i class="fa fa-pencil"></i>Editar
              </a>
              <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                <i class="fa fa-trash"></i>Eliminar
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

</div>